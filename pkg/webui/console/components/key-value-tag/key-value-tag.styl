.container
  padding: $cs.xxs
  line-height: 1
  height: $fs.m
  display: flex
  &:not(:last-child)
    margin-right: $cs.l
    +media-query($bp.s)
      margin-right: $cs.xs

.icon
  color: $c-icon-fill
  margin-right: $cs.xs

.value
  font-weight: bold
  margin-right: $cs.xxs

.message
  +media-query($bp.s)
    display: none
