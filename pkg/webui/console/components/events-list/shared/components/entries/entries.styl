.truncate
  display: block
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

.icon
  width: $ls.xs
  color: $c-icon-fill
  font-size: 1.1rem
  nudge('up', 2px)

.time
  flex-basis: 5%
  min-width: 4rem
  max-width: 6rem
  color: $tc-subtle-gray

.id
  flex-basis: 10%
  min-width: 6rem

.type
  flex-basis: 20%
  min-width: 14rem
  max-width: 20rem

.error-description
  color: red

.data,
.error-description
  flex-basis: auto
  flex-grow: 1
