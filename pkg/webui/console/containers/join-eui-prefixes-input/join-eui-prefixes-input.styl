.container
  display: flex
  flex-wrap: wrap

  &:not(.no-prefix)
    :global(.select__value-container)
      font-family: $font-family-mono
      font-weight: $fw.bold
      font-size: $fs.s

  .select
    flex-basis: 100%
    margin-bottom: $cs.xs

    :global(.select__option):not(:first-child)
      font-family: $font-family-mono
      font-weight: $fw.bold
      font-size: $fs.s

  .byte
    flex-basis: 100%

.zeroFillButton
  font-family: $font-family-mono
  font-size: $fs.s

+media-query-min($bp.s)
  .container
    flex-wrap: nowrap

    .select
      flex-basis: 30%
      margin-right: $cs.xs
      margin-bottom: 0

    .select + .byte
      flex-basis: 70%
