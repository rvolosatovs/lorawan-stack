.filters
  display: flex
  justify-content: space-between
  align-items: center
  padding: $cs.s 0
  flex-wrap: wrap

  &.top-rule
    border-normal('bottom')

  &-left
    flex-basis: auto
    padding: $cs.xxs $cs.s $cs.xxs 0

  &-right
    flex: 1
    display: flex
    justify-content: flex-end
    align-items: center
    max-width: 32rem
    +media-query($bp.s)
      max-width: none

.search-bar
  min-width: 5rem
  &:not(:last-child)
    margin-right: $cs.s

.page
  margin-top: $ls.s

.tabs
  margin: 0

.table-title
  padding-left: $cs.m
  color: $tc-deep-gray
  +media-query($bp.s)
    padding-left: 0

.error-message
  z-index: $zi.overlay + 1
  position: absolute
  top: 5rem
  left: 50%
  transform: translate(-50%, 0)
  color: $tc-error
