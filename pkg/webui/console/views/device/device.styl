.title
  margin: $ls.xxs 0
  height: 2rem
  display: flex
  align-items: flex-end

.head
  margin-top: 0

.id
  h2()
  nudge('up', 3px)
  line-height: .8
  height: 1rem
  white-space: no-break
  margin: 0
  font-weight: 600
  display: inline-block

.rule
  border-normal('bottom')
  border-left: 0
  border-right: 0
  border-top: 0
  margin-top: 0
  margin-bottom: $ls.s
