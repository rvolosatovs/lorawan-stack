.title
  margin-bottom: $ls.m

  h2
    entity-title()
    margin-bottom: 0

  .description
    display: block
    margin-top: ($cs.xs * -1)
    margin-bottom: $ls.s

.table
  margin-top: $ls.xl

.attributes
  list-style: none
  padding: 0

  &-entry
    display: flex
    align-content: center
    &:not(.last-child)
      text-margin-bottom($cs.s)

  .key
    flex-basis: 50%
    font-weight: bold

  .value
    flex-basis:50%

.latest-events
  margin-top: $ls.m
