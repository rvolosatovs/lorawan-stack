.container
  display: flex
  flex-direction: row

  +media-query($bp.xs)
    flex-direction: column

    .image
      width: 100%
      max-width: 100%
      max-height: 20rem
      padding-top: $cs.m
      padding-right: 0
      margin: 0 auto

.name
  margin: 0

.image
  max-width: 10rem
  padding-right: $cs.l
  object-fit: contain

.info
  display: flex
  flex-direction: column
  justify-content: space-around

  &-item
    color: $tc-subtle-gray
    padding-right: $cs.xxs

    &:after
      content: ','

    &:last-child
      padding: 0

      &:after
        display: none
