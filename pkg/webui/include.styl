// COLORS
// ======

// ## General

$c-active-blue = #0D83D0
$c-icon-fill = #686868
$c-subtle-fill = #AAA
$c-backdrop = #F3F3F3


// ## Lines

$c-divider = #EFEFEF
$c-divider-dark = #DFDFDF


// ## Alerts

$c-error = #FF5C5C
$c-warning = #FFC464
$c-info = $c-active-blue


// ## Text

$tc-black = #000
$tc-deep-gray = #323232
$tc-subtle-gray = #AAA
$tc-active = $c-active-blue


// ## Helper mixins

darker(color, step = 1)
  darken(color, step * 15)

lighter(color, step = 1)
  lighten(color, step * 15)


// SCALE
// =====

// ## Component Scale

$cs = {
  'xxs': .25rem,
  'xs':  .5rem,
  's':   .75rem,
  'm':   1rem,
  'l':   1.5rem,
  'xl':  2rem,
  'xxl': 4rem
}

cs(size)
  $cs[size]


// ## Layout Scale

$ls = {
  'xxs': 1rem,
  'xs':  1.5rem,
  's':   2rem,
  'm':   3rem,
  'l':   4rem,
  'xl':  6rem,
  'xxl': 10rem
}

ls(size)
  $ls[size]


// TYPOGRAPHY
// ==========

// ## Typefaces

$font-family = "Source Sans Pro", helvetica, sans-serif, "Apple Color Emoji"
$font-family-mono = "IBM Plex Mono", monospace


// ## Size and spacing

$font-size-base = 14px
$line-height = 1.785rem // = 25px


// ## Font Scale

$fs = {
  's': .857rem, // ~12px
  'm': 1rem, // 14px
  'l': 1.286rem, // ~18px
  'xl': 1.57rem, // ~22px
  'xxl': 1.857rem // ~26px
}

fs(size)
  $fs[size]


// BORDERS
// =======

// ## General

border-normal()
  border 1px solid $c-divider

border-dark()
  border 1px solid $c-divider-dark


// ## Radius

$br = {
  's': 3px
  'm': 6px
  'l': 12px
}

br(size)
  $br[size]

