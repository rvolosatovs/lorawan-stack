// COLORS
// ======

// ## Lines

$c-divider = #EFEFEF
$c-divider-dark = #DFDFDF
$c-divider-subtle = #F8F8F8
$c-input-border = #DFDFDF


// ## Alerts

$c-success = #24C833
$c-error = #FF5C5C
$c-warning = #FFC464
$tc-warning = #D18100
$c-info = $c-active-blue


// ## Text

$tc-black = #000
$tc-deep-gray = #363636
$tc-subtle-gray = #868686



// SCALE
// =====

// ## Component Scale

$cs = {
  'xxs': .25rem,
  'xs':  .5rem,
  's':   .75rem,
  'm':   1rem,
  'l':   1.5rem,
  'xl':  2rem,
  'xxl': 4rem
}


// ## Layout Scale

$ls = {
  'xxs': 1rem,
  'xs':  1.5rem,
  's':   2rem,
  'm':   3rem,
  'l':   4rem,
  'xl':  6rem,
  'xxl': 10rem
}



// TYPOGRAPHY
// ==========

// ## Typefaces

$font-family = 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
$font-family-mono = 'IBM Plex Mono', monospace


// ## Size and spacing

$font-size-base = 14px // Will be set on root element, so 1rem = 14px.
$line-height-base = 1.6786 // ~ 23.5px
$line-height-margin-factor = .3rem // Used for margin calculations on text elements.


// ## Font Scale

$fs = {
  's': .857rem, // ~12px
  'm': 1rem, // 14px
  'l': 1.286rem, // ~18p
  'xl': 1.57rem, // ~22px
  'xxl': 1.857rem, // ~26px
  'xl3': 2.285rem // ~32px
  'xl4': 3.428rem // ~48px
}

// Corresponding default line heights.
$lh = {
  's': $line-height-base
  'm': $line-height-base
  'l': 1.6
  'xl': 1.4
  'xxl': 1.2
}

// Font weights for body copy
$fw = {
  'normal': 500,
  'bold': 600, // Prefer this over `bolder`.
  'bolder': 800,
}

// Font weights for headings
$fwh = {
  'normal': 400,
  'bold': 600,
  'bolder': 800,
}


// ## Radius

$br = {
  's': 3px,
  'm': 6px,
  'l': 12px
}



// BREAKPOINTS
// ===========

// ## Mind the breakpoints also set in lib/components/init.js for the grid.

$bp = {
  'xl': 1600px,
  'l': 1280px,
  'm': 1080px,
  's': 768px,
  'xs': 620px,
  'xxs': 480px,
  'xs3': 376px,
}


// ANIMATIONS
// ==========

// ## Animation durations, only meant as guidance, usage is not enforced.

$ad = {
  'xs': .05s
  's': .12s
  'm': .25s
  'l': .5s
  'xl': 1s
}

// Z-INDEXES
// =========

$zi = {
  'modal': 2020
  'mobile-menu': 2010
  'nav': 2000
  'overlay': 10
  'dropdown': 9
  'slight': 1
}


// FORMS
// =====

$fiw = {
  'xxs': 5rem
  'xs': 8rem
  's': 14rem
  'm': 30rem
  'l': 40rem
  'full': 100%
}

// MISCELLANEOUS
// =============

$header-height = 7rem
$header-height-mobile = 4rem
$footer-height = 3rem
$sidebar-width = 17rem
$sidebar-width-minimized = 3rem
$sidebar-mobile-menu-height = 3rem
$breadcrumbs-bar-height = 3rem
$default-input-height = 2.3rem
