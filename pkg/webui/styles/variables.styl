// COLORS
// ======

// ## General

$c-active-blue = #0D83D0
$c-active-blue-hover = #0E78BD
$c-active-blue-active = #116EAB
$c-icon-fill = #686868
$c-subtle-fill = #AAA
$c-backdrop = #F3F3F3


// ## Lines

$c-divider = #EFEFEF
$c-divider-dark = #DFDFDF
$c-divider-subtle = #F8F8F8
$c-input-border = #BBB


// ## Alerts

$c-success = #24C833
$c-error = #FF5C5C
$c-warning = #FFC464
$c-info = $c-active-blue


// ## Text

$tc-black = #000
$tc-deep-gray = #363636
$tc-subtle-gray = #AAA
$tc-active = $c-active-blue
$tc-active-hover = $c-active-blue-active



// SCALE
// =====

// ## Component Scale

$cs = {
  'xxs': .25rem,
  'xs':  .5rem,
  's':   .75rem,
  'm':   1rem,
  'l':   1.5rem,
  'xl':  2rem,
  'xxl': 4rem
}


// ## Layout Scale

$ls = {
  'xxs': 1rem,
  'xs':  1.5rem,
  's':   2rem,
  'm':   3rem,
  'l':   4rem,
  'xl':  6rem,
  'xxl': 10rem
}



// TYPOGRAPHY
// ==========

// ## Typefaces

$font-family = 'Source Sans Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
$font-family-mono = 'IBM Plex Mono', monospace


// ## Size and spacing

$font-size-base = 14px // will be set on root element, so 1rem = 14px
$line-height-base = 1.6786 // ~ 23.5px
$line-height-margin-factor = .3rem // Used for margin calculations on text elements


// ## Font Scale

$fs = {
  's': .857rem, // ~12px
  'm': 1rem, // 14px
  'l': 1.286rem, // ~18p
  'xl': 1.57rem, // ~22px
  'xxl': 1.857rem // ~26px
}

// Corresponding default line heights
$lh = {
  's': $line-height-base
  'm': $line-height-base
  'l': 1.6
  'xl': 1.4
  'xxl': 1.2
}


// ## Radius

$br = {
  's': 3px,
  'm': 6px,
  'l': 12px
}



// BREAKPOINTS
// ===========

// ## Mind the breakpoints also set in lib/components/init.js for the grid

$bp = {
  'xl': 1600px,
  'l': 1280px,
  'm': 1000px,
  's': 768px,
  'xs': 620px,
  'xxs': 480px,
  '3xs': 376px,
}


// ANIMATIONS
// ==========

// ## Animation durations, only meant as guidance, usage is not enforced

$ad = {
  'xs': .05s
  's': .12s
  'm': .25s
  'l': .5s
  'xl': 1s
}

// Z-INDEXES
// =========

$zi = {
  'modal': 999
  'nav': 10
  'dropdown': 9
  'slight': 1
}
