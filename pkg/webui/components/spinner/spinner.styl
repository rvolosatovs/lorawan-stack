$l = $cs.xl
$s = $cs.l

.box
  text-align: center
  display: inline-block
  opacity: 0

  transition: opacity $ad.m

  &.visible
    opacity: 1

.spinner
  width: $l
  height: $l
  padding: 1px

.bar,
.circle
  stroke-width: 4
  fill: none
  vector-effect: non-scaling-stroke // @stylint ignore

.circle
  stroke: rgba(100, 100, 100, .1)

.bar
  stroke-dasharray: 40 50
  stroke-linecap: round

  animation: rotate .6s infinite linear

.stop
  stop-color: $c-active-blue

  .faded &
    stop-color: darken($c-subtle-fill, 20)

@keyframes rotate
  from
    transform: rotate(0)
  to
    transform: rotate(360deg)

.message
  color: $tc-subtle-gray

.center
  position: absolute
  top: ($l * -1) // visual centering
  left: 0
  right: 0
  bottom: 0
  margin: auto
  height: $l

  &.small
    height: $s
    top: ($s * -1) // visual centering

.small .spinner
  width: $s
  height: @width

  .bar,
  .circle
    stroke-width: 3.5
