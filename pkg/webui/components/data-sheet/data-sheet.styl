.table
  width: 100%
  table-layout: fixed
  margin-top: $cs.xs

  tr
    height: $cs.xl

  th
    text-align: left
    font-weight: normal
    color: $tc-subtle-gray
    min-width: 10rem
    line-height: 1
    padding-right: $cs.xs

  td
    width: 66%

tr.taller
  height: $ls.m

  & + tr:not(.taller)
    height: $ls.m

.group-heading
  &:not(:first-child)
    height: 2.5rem
    vertical-align: bottom
  th
    color: $tc-deep-gray
    font-weight: bold
    width: 33%

.sub th
  padding-left: $cs.l
