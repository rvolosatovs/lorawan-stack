.table
  width: 100%
  table-layout: fixed

  tr
    height: 2rem

  th
    text-align: left
    font-weight: normal
    color: $tc-subtle-gray
    min-width: 10rem

  td
    width: 66%

  td, th
    vertical-align: bottom

tr.taller
  height: 3rem

.group-heading
  &:not(:first-child)
    height: 4rem
  th
    color: $tc-deep-gray
    font-weight: bold
    width: 33%
