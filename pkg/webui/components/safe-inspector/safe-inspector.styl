$height = 2.3rem

.container
  border-input()
  horizontalize()
  border-radius: $br.s
  height: $height
  justify-content: flex-end

  & > span
    font-size: $fs.s
    line-height: $height
    color: $tc-subtle-gray
    padding-left: $cs.xs

.button-swap, .button-transform, .button-copy, .button-visibility
  reset-button()
  &:not(.button-swap)
    border-input('left')
  transition-color()
  color: $c-icon-fill
  flex: none
  padding: 0 .65rem

  span // icon
    display: flex

  &:hover
    color: black

  &:active
    background-color: $c-backdrop

.button-transform
  border-input('right', 3px)

  & + button
    border: 0

.button-copy
  position: relative

.data
  font-family: 'IBM Plex Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  display: flex
  align-items: center
  flex-grow: 1
  padding: 0 $cs.xs
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

  span
    margin-right: .3rem

.copy-confirm
  border-input()
  border-radius: $br.s
  position: absolute
  background-color: white
  color: $tc-deep-gray
  top: 2.8rem
  left: -50%
  font-size: $fs.s
  padding: $cs.xxs
  display: hidden
  animation: animationFrames ease 2s
  animation-iteration-count: 1
  transform-origin: 50% 50%
  animation-fill-mode: forwards


@keyframes animationFrames
  0%
    opacity: 0
    transform:  translate(0px, -25px) scale(.5)
    animation-timing-function: ease-out

  5%
    opacity: 1
    transform:  translate(0, 1px) scale(1.05)
    animation-timing-function: ease-out

  6%
    opacity: 1
    transform:  translate(0, 0) scale(1)

  94%
    opacity: 1
    transform:  translate(0, 0) scale(1)

  100%
    opacity: 0
    transform:  translate(0, -3px) scale(1)



