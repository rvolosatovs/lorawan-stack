.container
  display: flex
  align-items: center
  justify-items: flex-start
  margin-bottom: $cs.xxs

.input
  visually-hidden()

.status
  display: inline-flex
  align-items: center
  line-height: 2.3rem
  margin-left: $cs.m

  .remove-button
    margin-left: $cs.xs

.error
  color: $c-error
