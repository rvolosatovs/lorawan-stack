.icon
  font-family: 'Material Icons'
  font-weight: normal
  font-style: normal
  font-size: 1.3rem
  line-height: 1
  display: inline-flex
  text-transform: none
  letter-spacing: normal
  word-wrap: normal
  white-space: nowrap
  direction: ltr
  align-items: center
  vertical-align: middle
  text-rendering: optimizeLegibility
  font-feature-settings: 'liga'
  position: relative
  bottom: 1px

  &.small
    font-size: 1rem

  &.large
    font-size: 2rem

  &.nudgeTop
    bottom: 2px

  &.nudgeBottom
    bottom: 0
