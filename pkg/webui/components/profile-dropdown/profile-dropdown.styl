.container
  display: inline-flex
  align-items: center
  position: relative
  cursor: pointer
  transition: background-color $ad.s
  height: 100%
  padding: 0 $cs.l

  &:hover
    background-color: hoverize(white)

  +focus-visible()
    background-color: hoverize(white)

  &:active, &:focus
    background-color: activize(white)

.id
  one-liner()
  margin-right: $cs.s

.dropdown
  top: 6rem
