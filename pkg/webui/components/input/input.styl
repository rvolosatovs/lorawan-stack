.input-box
  border-input()
  box-sizing: border-box
  width: 100%
  background: white
  border-radius: $br.s
  padding: 0
  position: relative
  transition: border-color $ad.s
  overflow: hidden
  overflow-y: hidden
  display: flex
  align-items: center

  &.focus
    border-color: $c-active-blue
    color: black

  &.error
    border-color: $c-error
    background-color: lighten($c-error, 49)

  &.error.focus
    box-shadow: 0 0 0 3px alpha($c-error, .2)

  &.warn
    border-color: $c-warning
    background-color: lighten($c-warning, 42)

  &.warn.focus
    box-shadow: 0 0 0 3px alpha($c-warning, .3)

  &.disabled
    opacity: .4

  &.readOnly
    background-color: $c-backdrop

::placeholder
  font-family: $font-family
  font-weight: normal
  color: $tc-subtle-gray
  letter-spacing: initial
  font-variant: normal
  font-size: 1rem

.input
  font: inherit
  background: none
  border: 0
  color: inherit
  outline: 0
  width: 100%
  padding: 0 $cs.xs
  display: inline-block
  flex-grow: 2
  z-index: 10
  height: 2.3rem

  &[type='password']
    letter-spacing: 1px
    font-variant: small-caption
    font-size: 16px

.spinner
  padding: 0 $cs.xs
  nudge('down', 3px)

.valid
  height: .8rem
  display: inline-block
  flex-grow: 0
  flex-shrink: 0
  padding-right: $cs.s

  transition: opacity $ad.m
  opacity: 0

  &.show
    opacity: 1

  path
    fill: $c-active-blue

.byte
  font-family: 'IBM Plex Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  font-weight: 600
  letter-spacing: .05rem

.placeholder
  font-family: 'IBM Plex Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  position: absolute
  left: .7rem
  white-space: pre
  color: $tc-subtle-gray
  z-index: 0
  pointer-events: none

.icon
  nudge('down')
  padding-left: $cs.xs

textarea.input
  padding: $cs.xs
  min-height: 5rem
  height: auto
