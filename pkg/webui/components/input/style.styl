.input-box
  border-input()
  box-sizing: border-box
  width: 100%
  background: white
  border-radius: $br.m
  padding: 0
  position: relative
  transition: border-color 200ms
  overflow: hidden
  overflow-y: hidden
  display: flex
  align-items: center

  &.focus
    border-color: $c-active-blue
    color: black

  &.error
    border-color: $c-error
    background-color: lighten($c-error, 49)

  &.error.focus
    box-shadow: 0 0 0 3px alpha($c-error, .2)

  &.warn
    border-color: $c-warning
    background-color: lighten($c-warning, 42)

  &.warn.focus
    box-shadow: 0 0 0 3px alpha($c-warning, .3)

  &.disabled
    opacity: .4

  &.readOnly
    background-color: $c-backdrop

::placeholder
  color: $tc-subtle-gray
  letter-spacing: initial
  font-variant: normal
  font-size: 1rem

.input
  font: inherit
  background: none
  border: 0
  color: inherit
  outline: 0
  width: 100%
  height: 1.5rem
  padding: $cs.xxs $cs.xs
  display: inline-block
  flex-grow: 2
  z-index: 10

  &[type='password']
    letter-spacing: 1px
    font-variant: small-caption
    font-size: 16px

.valid
  height: .8rem
  display: inline-block
  flex-grow: 0
  flex-shrink: 0
  padding-right: $cs.s

  transition: opacity 300ms
  opacity: 0

  &.show
    opacity: 1

  path
    fill: $c-active-blue

.byte
  font-family: 'IBM Plex Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  font-weight: 600

.placeholder
  font-family: 'IBM Plex Mono', Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace
  position: absolute
  left: .7rem
  white-space: pre
  color: $tc-subtle-gray
  z-index: 0
  pointer-events: none
