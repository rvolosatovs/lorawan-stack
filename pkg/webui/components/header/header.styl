.bar
  border-normal('bottom')
  background: linear-gradient(bottom left, 0% #F8F8F8, 60% white) // @stylint ignore
  height: $header-height
  position: relative
  display: flex
  padding: 0 $ls.s
  justify-content: space-between
  flex: none
  +media-query($bp.s)
    background-color: white

.logo
  display: flex
  align-items: center
  justify-content: flex-start
  flex-grow: 0

  img
    nudge('up')
    height: 2.2rem

.nav-list
  display: flex
  align-items: stretch
  justify-content: space-between
  padding: 0 $ls.m
  flex-grow: 2

.left
  display: flex
  max-width: 42rem
  flex-grow: 1

.right
  padding-left: $cs.l
  display: flex
  align-items: center
  justify-content: flex-end
  max-width: 25rem
  flex-grow: 2

  & > div:first-child
    max-width: 15rem
    border-color: $c-divider-dark
