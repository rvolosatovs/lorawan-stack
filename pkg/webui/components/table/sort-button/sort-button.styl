.button
  reset-button()
  one-liner()
  width: 100%
  padding: 1px
  text-align: inherit
  transition: color $ad.s ease-in

  &:active,
  &-active
    color: $tc-deep-gray

  &-desc
    .icon
      transform: rotateX(180deg)

.icon
  transition: transform $ad.m ease-in-out
  padding-left: $cs.xxs
