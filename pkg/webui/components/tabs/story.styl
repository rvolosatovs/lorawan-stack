.navigation-title
  color: $tc-subtle-gray
  font-size: $fs.xl
  padding: $cs.l $cs.xl
  white-space: nowrap

  &-active
    color: lighter($c-active-blue, 2)
    position: relative

    &:after
      position: absolute
      bottom: 0
      left: 0
      height: 3px
      display: block
      width: 100%
      background: lighter($c-active-blue, 2)
      content: ''

.icon
  margin-right: $ls.xxs
