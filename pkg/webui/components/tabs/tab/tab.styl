.tab
  display: flex
  flex-direction: column

  &:not(:last-child)
    margin-bottom: 0

.tab-item
  display: flex
  white-space: nowrap
  padding: $cs.s $cs.l
  text-align: center
  position: relative
  cursor: pointer
  user-select: none
  color: $tc-subtle-gray
  transition: color $ad.xs

  &:not(.tab-item-active):hover
    color: $tc-deep-gray

  &-narrow
    padding: $cs.l $cs.m

  &-disabled
    cursor: not-allowed
    opacity: .4

  &-default:not(.tab-item-active)
    pseudo-border-animated(3px, $c-divider)

  &-active
    pseudo-border(3px, $c-active-blue)
    color: $c-active-blue
