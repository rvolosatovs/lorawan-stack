$button($color)
  background: $color
  border-radius: $br.m
  border: 0
  outline: 0
  font-weight: 600
  cursor: pointer
  color: white
  white-space: nowrap

  &:not(.busy) span:last-child
    vertical-align: middle
    nudge('up')

  &:not(:last-child)
    margin-right: $cs.s

  &:not(.naked)
    &:hover
      background: darken($color, 6)

    &:focus
      background: darken($color, 6)

    &:active
      background: darken($color, 10)

  &:disabled
    opacity: .4

    &:hover:not(.naked)
      background: $color
      cursor: default

  &.naked
    background: transparent
    font-weight: 300
    border: 1px solid transparent

    &:not(.busy)
      color: $color

    &:focus:not(.busy):not(:active)
      color: darken($color, 8)
      border: 1px solid $color

  &.busy:not(.naked),
  &.busy:disabled
    if ($color != transparent)
      background: $c-backdrop
      color: transparent

      $s = lighter($color, 1)
    else
      $s = lighter($c-active-blue, 1)

    stop
      stop-color: $s

.button
  font: inherit
  display: inline-block
  padding: $cs.xs $cs.l
  border-radius: 3px
  transition: color 150ms, background 150ms, border 200ms
  $button($c-active-blue)

  &.danger
    $button($c-warning)

  &.secondary
    $button($c-subtle-fill)

  &.error
    animation: shake 80ms 4 linear

  &.withIcon
    padding-left: $cs.m

  &.onlyIcon
    padding-left: $cs.s
    padding-right: $cs.s

.icon
  margin-right: $cs.xs

@keyframes shake
  0%
    transform: translate(0)
  25%
    transform: translate(.4em)
  75%
    transform: translate(-.4em)
  100%
    transform: translate(0)

.content
  position: relative
  vertical-align: middle

.spinner
  position: absolute
  top: 0
  bottom: 0
  left: $cs.s * -1
  right: $cs.s * -1
