.expandable
  cursor: pointer

.overview
  position: relative
  display: flex
  align-items: center
  justify-content: flex-start
  font-family: $font-family-mono
  font-size: $fs.s

  &-icon
    nudge('up', 1px)
    margin-right: $cs.xs
    font-size: 1.1rem

    &-default,
    &-expand
      color: $c-icon-fill

    &-expand
      right: 0
      top: 50%
      transform: translateY(-50%)
      position: absolute

  &-time
    color: $tc-subtle-gray
    padding-right: $cs.s

  &-emitter
    flex-basis: 20%
    min-width: 7rem
    text-overflow: ellipsis
    white-space: nowrap
    overflow: hidden
    margin-right: $cs.s

  &-content
    display: inline-block
