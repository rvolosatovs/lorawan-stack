// This style is to be applied to the portalled container.
.container
  border-normal(right)
  left: 0
  background-color: white
  z-index: $zi.nav
  +media-query-min($bp.s)
    top: 0
    position: absolute
    height: 100%
  +media-query($bp.s)
    height: auto
    position: sticky
    top: $header-height-mobile
    z-index: $zi.nav
    +media-query-height(500px)
      position: static

.navigation
  sidebar-transition(width)
  position: sticky
  background-color: white
  top: 0
  display: flex
  flex-direction: column
  justify-content: space-between
  box-sizing: border-box
  max-height: 100%
  +media-query-min($bp.s)
    width: $sidebar-width
    overflow-y: auto
    overflow-x: hidden
  +media-query($bp.s)
    height: 4rem
    width: 100%

  &-minimized
    +media-query-min($bp.s)
      width: $sidebar-width-minimized
      display: inline-flex

      .header
        padding: 0
        width: 100%
        display: flex
        height: $breadcrumbs-bar-height
        justify-content: center

        .message
          display: none

        .icon
          margin-right: 0

.header
  border-normal(bottom)
  sidebar-transition(padding)
  box-sizing: border-box
  display: flex
  align-items: center
  padding: $cs.xl $cs.l
  font-weight: $fw.bold

.mobile-header
  align-items: center
  +media-query-min($bp.s)
    display: none
  +media-query($bp.s)
    border-normal(bottom)
    display: flex
    padding: $cs.m $cs.s

  .expand-icon
    margin-right: $cs.s
    font-size: 2rem
    color: $tc-subtle-gray

.body
  height: 100%

.drawer
  background-color: white
  z-index: $zi.nav
  overflow: auto
  +media-query($bp.s)
    sidebar-transition(left, box-shadow)
    position: fixed
    top: $header-height-mobile
    left: -60vw
    bottom: 0
    width: 60vw
    max-width: 20rem

    &-open
      box-shadow: 0 0 13rem 2rem rgba(0,0,0,.4)
      left: 0

.message
  display: block
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.icon
  margin-right: $cs.xs

.scroll-lock
  +media-query($bp.s)
    overflow: hidden
