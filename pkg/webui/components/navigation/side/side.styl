.navigation
  border-dark(right)
  min-width: 14rem
  max-width: 16rem
  height: 100%
  display: flex
  flex-direction: column
  justify-content: space-between

  &-minimized
    min-width: auto
    display: inline-flex

  &-button
    align-self: center

.header
  display: flex
  align-content: center
  padding: $cs.l $cs.m
  font-weight: 600
  background-color: $c-backdrop

  &-minimized
    display: inline-block

    .message
      display: none

    .icon
      margin-right: 0

.message
  display: block
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.icon
  nudge('down', 3px)
  margin-right: $cs.xs
