$event-container-height = 2.1rem

.container
  position: relative
  min-height: $event-container-height
  overflow: hidden

.overview
  display: flex
  align-items: center
  justify-content: flex-start
  font-family: $font-family-mono
  font-size: $fs.s
  padding: $cs.xxs 0 $cs.xxs $cs.xs
  min-height: $event-container-height

  &, & .icon
    transition: background-color $ad.s linear

  &-widget
    min-height: 1rem
    padding: 0

  &-expandable
    cursor: pointer

  &:not(.overview-widget)
    &:hover, &:hover .icon
      background-color: $c-backdrop

  &:not(:hover) .icon
    background-color: $c-backdrop-lighter

  .icon
    color: $c-subtle-fill
    display: flex
    justify-content: center
    min-height: $event-container-height
    width: $event-container-height
    flex-shrink: 0


    &-error
      color: $c-error

    &-message
      color: $c-active-blue

