.container
  position: relative
  padding-right: $cs.l

.overview
  display: flex
  align-items: center
  justify-content: flex-start
  font-family: $font-family-mono
  font-size: $fs.s
  overflow-x: auto
  padding: $cs.xxs 0 $cs.xxs $cs.xs
  min-height: 2rem

  &-widget
    min-height: 1rem
    padding: 0

  &-expandable
    cursor: pointer

  .icon
    padding-right: $cs.xs
    color: $c-subtle-fill
    right: 0
    top: 50%
    transform: translateY(-50%)
    position: absolute

    &-error
      color: $c-error

    &-message
      color: $c-active-blue

