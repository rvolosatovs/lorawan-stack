.container
  display: flex
  justify-content space-between
  flex-wrap: wrap

  .select
    flex-basis: 100%

  .number
    margin-bottom: $cs.xs
    flex-basis: 100%
    width: 90%

.notification
  width: 100%

+media-query-min($bp.s)
  .container
    flex-wrap: nowrap

    .select
      flex-basis: 30%
      margin-bottom: 0

    .number
      padding-right $cs.s

    .select + .number
      flex-basis: 70%
