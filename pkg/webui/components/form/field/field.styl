.field
  margin-bottom: $ls.xxs
  display: flex
  flex-wrap: wrap
  width: 100%

  .title
    font-weight: $fw.bold

    &::after
      display: none

  &.required
    .label::after
      nudge('down')
      content: '*'
      font-size: $fs.l
      display: inline-block
      line-height: 1
      color: $c-error

  &:not(.has-glossary-term)
    &.required
      .label::after
        margin-left: 0.1rem

.label
  display: block
  align-items: flex-start
  width:  100%
  flex-shrink: 0
  user-select: none
  margin-bottom: $cs.xxs

  .title
    display: inline-block

  .glossary-link
    nudge('down', 2px)
    display: inline-block
    text-decoration: none

.description
  font-weight: $fw.normal
  color: $tc-subtle-gray

.component-area
  flex-shrink: 0
  width: 100%

.messages
  flex-shrink: 0
  width: 100%
  order: 3
  margin-top: text-spacing-top($cs.xs)
  margin-bottom: - $cs.xs

.message
  display: block
  font-size: .9rem

  height: 0
  box-sizing: border-box
  overflow: hidden
  opacity: 0
  transition: opacity $ad.m

  span
    display: inline-block

  .name
    font-weight: $fw.bold

  &.show
    height: auto
    transition: opacity $ad.m
    opacity: 1

  .icon
    font-size: 1.15rem
    margin-right: $cs.xxs
    vertical-align: text-top
    flex-grow: 0
    flex-shrink: 0

.err
  color: $c-error

.warn
  color: $tc-warning

.disabled .info-area
    opacity: .4
